<resources>

    <!-- Base application theme. -->
    <style name="app_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    
    <style name="icon">
        <item name="android:layout_width">@dimen/size_smaller_24</item>
        <item name="android:layout_height">@dimen/size_smaller_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_32</item>
    </style>

    <style name="text_data">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller_16</item>
        <item name="android:gravity">bottom</item>
    </style>
    
    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_72</item>
        <item name="android:layout_marginTop">@dimen/spacing_smaller_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_smaller_8</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_24</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_24</item>
    </style>

    <style name="edit_text_disabled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:focusable">false</item>
        <item name="android:textScaleX">0.8</item>
    </style>
    
    <style name="white_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textScaleX">0.85</item>
    </style>

</resources>
